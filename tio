#include <iostream>

using namespace std;

int main()
{
    float a,b,hasil;
    char aritmatika;

    cout << "Selamat datang di kalkulator Sederhana" << endl;

    //input user
    cout << "masukkan angka = " << endl;
    cin >> a;
    cout << "masukkan operasi = " << endl;
    cin >> aritmatika;
    cout << "masukkan angka = " << endl;
    cin >> b;

    //operasi
    if (aritmatika == '+'){
        hasil = a + b;
    } else if (aritmatika == '-'){
        hasil = a - b;
    } else if (aritmatika == '/'){
        hasil = a / b;
    } else if (aritmatika == '*'){
        hasil = a * b;
    } else {
        cout << "Pilihan anda tidak anda";
    } 

    // output
    cout << "hasil dari " << a << " " << aritmatika << " " << b << " = " << hasil << endl;

    
    return 0;
}
